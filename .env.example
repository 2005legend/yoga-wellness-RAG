# Application Configuration
APP_NAME=wellness-rag-app
APP_VERSION=0.1.0
DEBUG=true
LOG_LEVEL=INFO

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_RELOAD=true

# Database Configuration
MONGODB_URL=mongodb://localhost:27017
MONGODB_DATABASE=wellness_rag
MONGODB_COLLECTION_LOGS=interaction_logs
MONGODB_COLLECTION_SAFETY=safety_incidents

# Vector Database Configuration (Choose one)
# Pinecone
PINECONE_API_KEY=your_pinecone_api_key
PINECONE_ENVIRONMENT=your_pinecone_environment
PINECONE_INDEX_NAME=wellness-knowledge

# ChromaDB (Alternative)
CHROMA_PERSIST_DIRECTORY=./data/chroma
CHROMA_COLLECTION_NAME=wellness_chunks

# AI/ML Configuration
OPENAI_API_KEY=your_openai_api_key
OPENAI_MODEL=gpt-4-turbo-preview
OPENAI_EMBEDDING_MODEL=text-embedding-3-large
OPENAI_MAX_TOKENS=4000
OPENAI_TEMPERATURE=0.7

# Embedding Configuration
EMBEDDING_DIMENSION=3072
CHUNK_SIZE=512
CHUNK_OVERLAP=50
MAX_CHUNKS_PER_QUERY=5

# Safety Configuration
SAFETY_ENABLED=true
MEDICAL_ADVICE_THRESHOLD=0.8
CRISIS_DETECTION_THRESHOLD=0.9

# Caching Configuration
REDIS_URL=redis://localhost:6379
CACHE_TTL=3600
EMBEDDING_CACHE_TTL=86400

# Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60

# Security
SECRET_KEY=your_secret_key_here_change_in_production
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Monitoring
ENABLE_METRICS=true
METRICS_PORT=9090

# Development
RELOAD_ON_CHANGE=true
CORS_ORIGINS=["http://localhost:3000", "http://localhost:8080"]